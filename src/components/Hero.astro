         <!-- Fallback Image with Gradient Overlay -->
        <div class="absolute inset-0 bg-gradient-to-r from-violet-900/90 to-blue-900/90 z-10 mix-blend-multiply"></div>
        <img src="/assets/images/hero-bg.png" alt="Hero Background" class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110 opacity-60" />
        
