---
import { getEntry, render } from "astro:content";
import Markdown from "@components/misc/Markdown.astro";

import MainGridLayout from "../layouts/MainGridLayout.astro";

// Fetch the "skills" entry from "spec" collection
const skillsPost = await getEntry("spec", "skills");

if (!skillsPost) {
	throw new Error("Skills page content not found");
}

const { Content } = await render(skillsPost);
---
<MainGridLayout title="Skills" description="Skills and Certifications">
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
        <div class="card-base z-10 px-9 py-6 relative w-full ">
            <Markdown class="mt-2">
                <Content />
            </Markdown>
        </div>
    </div>
</MainGridLayout>
